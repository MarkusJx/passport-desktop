{
    "name": "ms-passport",
    "version": "0.1.0",
    "main": "dist/index.js",
    "types": "native.d.ts",
    "description": "A Node.js addon for enabling Client-side Windows Hello using Microsoft Passport",
    "keywords": [
        "Windows Hello",
        "Microsoft Passport"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/MarkusJx/ms-passport.git"
    },
    "author": {
        "name": "MarkusJx",
        "url": "https://github.com/MarkusJx"
    },
    "files": [
        "dist",
        "native.js",
        "native.d.ts"
    ],
    "napi": {
        "name": "ms-passport",
        "triples": {
            "defaults": false,
            "additional": [
                "x86_64-pc-windows-msvc",
                "i686-pc-windows-msvc"
            ]
        },
        "ts": {
            "constEnum": false
        }
    },
    "license": "MIT",
    "devDependencies": {
        "@napi-rs/cli": "^2.14.8",
        "@types/is-ci": "^3.0.0",
        "@types/node": "^20.4.4",
        "ava": "^5.1.1",
        "is-ci": "^3.0.1",
        "prettier": "^3.0.0",
        "rimraf": "^5.0.1",
        "tsx": "^3.12.7",
        "typedoc": "^0.24.8",
        "typescript": "^5.1.6"
    },
    "ava": {
        "timeout": "3m",
        "extensions": {
            "ts": "module"
        },
        "nodeArguments": [
            "--loader=tsx"
        ]
    },
    "engines": {
        "node": ">= 10"
    },
    "scripts": {
        "artifacts": "napi artifacts",
        "build": "napi build --platform --release --js native.js --dts native.d.ts",
        "build:debug": "napi build --platform --js native.js --dts native.d.ts",
        "build:ts": "rimraf dist && tsc",
        "postbuild": "npm run build:ts",
        "prepublishOnly": "napi prepublish -t npm",
        "test": "ava",
        "universal": "napi universal",
        "version": "napi version",
        "format": "prettier --write .",
        "docs": "typedoc --out docs native.d.ts"
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "optionalDependencies": {
        "ms-passport-win32-ia32-msvc": "0.1.0",
        "ms-passport-win32-x64-msvc": "0.1.0"
    }
}
